<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@drawable/italian_food_port"
    tools:context=".EditRestaurantProfile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            app:title="@string/edit_restaurant_profile"
            app:titleMarginStart="18dp"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Small"
            app:titleTextColor="@color/colorBlack" />
        <android.support.v7.widget.CardView
            android:id="@+id/cardInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/lightTransparentGray">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:drawableStart="@drawable/ic_home_black_24dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"/>
                    <EditText
                        android:id="@+id/edt_nameRestaurant"
                        android:layout_width="match_parent"

                        android:inputType="textCapWords"
                        android:maxLength="20"
                        android:layout_height="wrap_content"
                        android:hint="@string/restaurant_name"
                        android:textColorHint="@color/darkGray"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/phone"
                        android:drawableStart="@drawable/ic_local_phone_black_24dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"/>
                    <EditText
                        android:id="@+id/edt_phoneRestaurant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLength="16"
                        android:hint="@string/phone_hint"
                        android:textColorHint="@color/darkGray"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile"
                        android:drawableStart="@drawable/ic_phone_iphone_black_24dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLength="16"
                        android:hint="@string/mobile_hint"
                        android:textColorHint="@color/darkGray"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/location"
                        android:drawableStart="@drawable/ic_location_on_black_24dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:maxLength="25"
                        android:hint="@string/location_hint"
                        android:textColorHint="@color/darkGray"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"/>

                     </LinearLayout>
                </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cardOpeningHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/lightTransparentGray">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/opening_hours"
                    android:drawableStart="@drawable/ic_access_time_black_24dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:maxLength="25"
                    android:hint="@string/location_hint"
                    android:textColorHint="@color/darkGray"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cardImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/lightTransparentGray">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/photo"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imgFood"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/img_restaurant" />

                <ImageButton
                    android:id="@+id/btnSelectPhoto"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_camera"
                    android:src="@drawable/ic_photo_camera_black_24dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:background="@color/lightGray"
                android:textAllCaps="false"
                android:text="@string/submit"
                />


            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:text="@string/cancel" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>